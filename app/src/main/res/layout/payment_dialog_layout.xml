<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recipiebackground">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recipit_relativie_main"
        android:layout_width="400px"
        android:layout_height="720px"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/recipit_background" />

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@drawable/elmo_sanat_logo" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/view_4"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:alpha="0.08"
            android:src="@drawable/elomo_sanat_alone_logo" />


        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/img_1"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@color/text_color" />

        <LinearLayout
            android:id="@+id/peygiri_code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_2"
            android:layout_marginTop="@dimen/margin_5"
            android:gravity="center"
            android:orientation="horizontal">

            <com.safshekan.parkban.controls.PersianTextView
                android:id="@+id/txt_peygiri_layout"
                style="@style/print_text"
                android:layout_marginRight="@dimen/margin_normal" />

            <com.safshekan.parkban.controls.PersianTextView
                style="@style/print_text"
                android:layout_marginRight="@dimen/margin_5"
                android:text="شماره پیگیری :" />

        </LinearLayout>

        <View
            android:id="@+id/view_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/peygiri_code_layout"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@color/text_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_4"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/entry_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center"
                android:orientation="horizontal">

                <com.safshekan.parkban.controls.PersianTextView
                    android:id="@+id/entry_date"
                    style="@style/print_text"
                    android:layout_marginRight="@dimen/margin_normal" />

                <com.safshekan.parkban.controls.PersianTextView
                    style="@style/print_text"
                    android:layout_marginRight="@dimen/margin_5"
                    android:text="تاریخ ورود:" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/duration_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center"
                android:orientation="horizontal">

                <com.safshekan.parkban.controls.PersianTextView
                    android:id="@+id/duration_date"
                    style="@style/print_text"
                    android:layout_marginRight="@dimen/margin_normal" />

                <com.safshekan.parkban.controls.PersianTextView
                    style="@style/print_text"
                    android:layout_marginRight="@dimen/margin_5"
                    android:text="مدت زمان توقف:" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cost_recipit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center"
                android:orientation="horizontal">

                <com.safshekan.parkban.controls.PersianTextView
                    android:id="@+id/cost_txt"
                    style="@style/print_text"
                    android:layout_marginRight="@dimen/margin_normal" />

                <com.safshekan.parkban.controls.PersianTextView
                    style="@style/print_text"
                    android:layout_marginRight="@dimen/margin_5"
                    android:text="مبلغ پرداخت شده:" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ozv_recipit_layout_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center"
                android:orientation="horizontal">

                <com.safshekan.parkban.controls.PersianTextView
                    android:id="@+id/ozv_txt"
                    style="@style/print_text"
                    android:layout_marginRight="@dimen/margin_normal" />

                <com.safshekan.parkban.controls.PersianTextView
                    style="@style/print_text"
                    android:layout_marginRight="@dimen/margin_5"
                    android:text="شماره عضویت:" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cart_layout_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center"
                android:orientation="horizontal">

                <com.safshekan.parkban.controls.PersianTextView
                    android:id="@+id/cart_txt"
                    style="@style/print_text"
                    android:layout_marginRight="@dimen/margin_normal" />

                <com.safshekan.parkban.controls.PersianTextView
                    style="@style/print_text"
                    android:layout_marginRight="@dimen/margin_5"
                    android:text="شماره کارت:" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.safshekan.parkban.controls.PersianTextView
                    android:id="@+id/time"
                    style="@style/print_text"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:text="14:22" />

                <com.safshekan.parkban.controls.PersianTextView
                    style="@style/print_text"
                    android:layout_marginRight="@dimen/margin_normal"

                    android:text="ساعت : " />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/plate_main_layout_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/plate_layout_layout"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/pelak_template"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.safshekan.parkban.controls.PersianTextView
                        android:id="@+id/p0_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="51"
                        android:textColor="@color/text_color"
                        android:textSize="13sp" />

                    <com.safshekan.parkban.controls.PersianTextView
                        android:id="@+id/p1_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:textSize="13sp" />

                    <com.safshekan.parkban.controls.PersianTextView
                        android:id="@+id/p2_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="668"
                        android:textColor="@color/text_color"
                        android:textSize="13sp" />

                    <com.safshekan.parkban.controls.PersianTextView
                        android:id="@+id/p3_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="55"
                        android:textColor="@color/text_color"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/motor_layout_layout"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/motor_plate"
                    android:orientation="vertical">

                    <com.safshekan.parkban.controls.PersianTextView
                        android:id="@+id/m0_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="@color/text_color"
                        android:textSize="13dp" />

                    <com.safshekan.parkban.controls.PersianTextView
                        android:id="@+id/m1_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="45678"
                        android:textColor="@color/text_color"
                        android:textSize="13dp" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="www.elmosanat.com"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="410px"
        android:layout_height="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_shape_dialog_for_print" />

    <Button
        android:id="@+id/print_recipit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipit_relativie_main"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/new_new_btn_background_layout"
        android:text="چاپ"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>