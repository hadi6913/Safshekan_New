<!--                    android:textStyle="bold" />-->

<!--            </RelativeLayout>-->


            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/car_type_container_enter_qr"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/refresh"
                android:gravity="center"
                android:onClick="@{viewModel::Refresh_Page}" />




            <Button
                android:id="@+id/sendClick_enter_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/new_new_btn_background_layout"
                android:onClick="@{viewModel::Taeed_Onclick}"
                android:text="@{viewModel.shouldPayFirst ? @string/pay_entrance_fare : @string/print_enter_qr}"
                android:textColor="@android:color/white"
                android:textSize="21sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </RelativeLayout>

</layout>