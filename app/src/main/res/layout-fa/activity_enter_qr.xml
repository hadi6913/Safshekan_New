<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />


        <variable
            name="viewModel"
            type="com.khodmohaseb.parkban.viewmodels.EnterQrViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".EnterQrActivity">

        <ImageView
            animatedVisibilityScale="@{4000}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:alpha="0.06"
            android:src="@drawable/elomo_sanat_alone_logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/linear_button_container_main_enter_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_background_white_dd"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_pelak_khan_enter_qr"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/btn_pelak_khan_background"
                        android:gravity="center"
                        android:onClick="@{viewModel::Pelak_Khan_Onclick}" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btn_pelak_khan_enter_qr"
                        android:layout_alignLeft="@id/btn_pelak_khan_enter_qr"
                        android:layout_alignRight="@id/btn_pelak_khan_enter_qr"
                        android:gravity="center_horizontal"
                        android:text="پلاک خوان"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold" />

                </RelativeLayout>




            </LinearLayout>


            <RelativeLayout
                android:id="@+id/layout_pelak_main_enter_qr"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/linear_button_container_main_enter_qr"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp"
                android:visibility="@{viewModel.hasPelak ? View.VISIBLE : View.GONE}">


                <LinearLayout
                    android:id="@+id/car_plate_enter_qr"
                    android:layout_width="258dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:background="@drawable/pelak_template"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:visibility="@{viewModel.car ? View.VISIBLE : View.GONE}">

                    <com.khodmohaseb.parkban.controls.PersianEditText
                        android:id="@+id/etxt_car_plate_first_cell_enter_qr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="22dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="**"
                        android:inputType="number"
                        android:maxLength="2"
                        android:text="@={viewModel.plate__0}"
                        android:textColor="@color/text_color"
                        android:textSize="20sp"
                         />

                    <Spinner
                        android:id="@+id/spinner_enter_qr"
                        style="@style/spinner_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:entries="@array/image_array"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />


                    <com.khodmohaseb.parkban.controls.PersianEditText
                        android:id="@+id/etxt_car_plate_third_cell_enter_qr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="***"
                        android:inputType="number"
                        android:maxLength="3"
                        android:text="@={viewModel.plate__2}"
                        android:textColor="@color/text_color"
                        android:textSize="20sp"
                         />

                    <com.khodmohaseb.parkban.controls.PersianEditText
                        android:id="@+id/etxt_car_plate_forth_cell_enter_qr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="**"
                        android:inputType="number"
                        android:maxLength="2"
                        android:text="@={viewModel.plate__3}"
                        android:textColor="@color/text_color"
                        android:textSize="17sp"
                         />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:background="@drawable/motor_plate"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.motor ? View.VISIBLE : View.GONE}">

                    <com.khodmohaseb.parkban.controls.PersianEditText
                        android:id="@+id/etxt_motor_plate_first_cell_enter_qr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="***"
                        android:inputType="number"
                        android:maxLength="3"
                        android:text="@={viewModel.mplate__0}"
                        android:textColor="@color/text_color"
                        android:textSize="17sp"
                         />

                    <com.khodmohaseb.parkban.controls.PersianEditText
                        android:id="@+id/etxt_motor_plate_second_cell_enter_qr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="*****"
                        android:inputType="number"
                        android:maxLength="5"
                        android:text="@={viewModel.mplate__1}"
                        android:textColor="@color/text_color"
                        android:textSize="17sp"
                         />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_motor_car_change_enter_qr"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:onClick="@{viewModel::Motor_Car_Onclick}"
                    android:scaleType="centerCrop"
                    android:src="@{viewModel.car ?  @drawable/car_256 :@drawable/motor_256}" />


            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/layout_pelak_main_enter_qr"
                android:id="@+id/car_type_container_enter_qr"
                android:layout_width="match_parent"
                android:layout_marginRight="45dp"
                android:orientation="vertical"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="45dp"
                android:layout_height="wrap_content"
                >




                <com.khodmohaseb.parkban.controls.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="نوع تعرفه را انتخاب کنید"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="24dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="12dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/login_edit_text_background"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_car_type_enter_qr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        app:adapter="@{viewModel.langAdapter_car_type}"

                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:spinnerMode="dropdown" />






                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_button" />

                </RelativeLayout>



                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:orientation="horizontal">


                    <com.khodmohaseb.parkban.controls.PersianTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="  ریال"/>


                    <com.khodmohaseb.parkban.controls.PersianTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2000"
                        android:gravity="center"
                        android:text="@{viewModel.selectedTarrifEntranceFee}"/>



                    <com.khodmohaseb.parkban.controls.PersianTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="مبلغ ورودی : "/>



                </android.support.v7.widget.LinearLayoutCompat>

                <com.khodmohaseb.parkban.controls.PersianTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@{viewModel.shouldPayFirst ? @color/red : @color/green}"
                    android:text="@{viewModel.shouldPayFirst ? @string/should_pay_now : @string/should_pay_later}"/>

            </LinearLayout>




